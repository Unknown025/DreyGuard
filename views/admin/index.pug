extends layout

block content
    div.container(style='margin:0 auto; max-width: 1280px; padding: 10px;')
        button.mdc-fab.mdc-fab--extended(id='create-update-button')
            div.mdc-fab__ripple
            span.material-icons.mdc-fab__icon add
            span.mdc-fab__label Create Update
        div.mdc-data-table
            table.mdc-data-table__table(style='width:100%')
                thead
                    tr.mdc-data-table__header-row
                        th.mdc-data-table__header-cell.mdc-data-table__cell--checkbox(scope='col')
                            div.mdc-checkbox.mdc-data-table__header-row-checkbox.mdc-checkbox--selected
                                input(type='checkbox').mdc-checkbox__native-control
                                div.mdc-checkbox__background
                                    svg.mdc-checkbox__checkmark(viewbox="0 0 24 24")
                                        path.mdc-checkbox__checkmark-path(fill="none", d="M1.73,12.91 8.1,19.28 22.79,4.59")
                                    div.mdc-checkbox__mixedmark
                        th.mdc-data-table__header-cell(scope="col") Name
                        th.mdc-data-table__header-cell(scope="col") Version
                        th.mdc-data-table__header-cell(scope="col") Published
                        th.mdc-data-table__header-cell(scope="col") Platform
                        th.mdc-data-table__header-cell(scope="col") Notes
                        //th.mdc-data-table__header-cell(scope="col") Downloads
                        th.mdc-data-table__header-cell(scope="col")
                tbody.mdc-data-table__content


    div.mdc-dialog(id='create-dialog')
        div.mdc-dialog__container
            div.mdc-dialog__surface
                h2.mdc-dialog__title Create a New Update
                div.mdc-dialog__content(id='update-dialog-content')
                    div.mdc-text-field.update-field(id='name-field-mdc')
                        input(type='text', id='name-field').mdc-text-field__input
                        label.mdc-floating-label(for='name-field') Release Name
                        div.mdc-line-ripple
                    div.mdc-text-field.update-field(id='version-field-mdc')
                        input(type='text', id='version-field').mdc-text-field__input
                        label.mdc-floating-label(for='version-field') Version
                        div.mdc-line-ripple
                    div.mdc-select.update-field
                        div.mdc-select__anchor(style='width:100%')
                            i.mdc-select__dropdown-icon
                            div.mdc-select__selected-text
                            span.mdc-floating-label Platform
                            div.mdc-line-ripple
                        div.mdc-select__menu.mdc-menu.mdc-menu-surface(style='width:100%')
                            ul.mdc-list
                                li.mdc-list-item(data-value='win32-x64') Windows x64
                                li.mdc-list-item(data-value='win32') Windows x86
                                li.mdc-list-item(data-value='darwin') macOS x64
                    div.mdc-text-field.update-field(id='id-field-mdc')
                        input(type='text', id='id-field').mdc-text-field__input
                        label.mdc-floating-label(for='id-field') Software ID
                        div.mdc-line-ripple
                footer.mdc-dialog__actions
                    button(type='button', data-mdc-dialog-action="close").mdc-button.mdc-dialog__button
                        span.mdc-button__label Cancel
                    button(type='button', data-mdc-dialog-action="accept").mdc-button.mdc-dialog__button
                        span.mdc-button__label Create
        div.mdc-dialog__scrim

    div.mdc-dialog(id='download-dialog')
        div.mdc-dialog__container
            div.mdc-dialog__surface
                h2.mdc-dialog__title Uploading...
                div.mdc-dialog__content
                    div.mdc-linear-progress
                        div.mdc-linear-progress__buffering-dots
                        div.mdc-linear-progress__buffer
                        div.mdc-linear-progress__bar.mdc-linear-progress__primary-bar
                            span.mdc-linear-progress__bar-inner
                        div.mdc-linear-progress__bar.mdc-linear-progress__secondary-bar
                            span.mdc-linear-progress__bar-inner
                footer.mdc-dialog__actions
                    button(type='button', data-mdc-dialog-action="cancel").mdc-button.mdc-dialog__button
                        span.mdc-button__label Cancel
        div.mdc-dialog__scrim

block scripts
    script(src='/index.js')